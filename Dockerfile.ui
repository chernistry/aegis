FROM node:20-alpine AS builder
WORKDIR /app

COPY aegis-ui/ ./aegis-ui

RUN npm install -g pnpm \
    && cd aegis-ui \
    && pnpm install --frozen-lockfile \
    && pnpm run build

FROM nginx:alpine
COPY --from=builder /app/aegis-ui/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"] 