FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code
COPY src/ ./src/
COPY app.py .  # Legacy compatibility (main API is now src/api/main.py)
COPY ingest.py .

# Set up environment variable for Python path
ENV PYTHONPATH=/app
ENV DOCKER_ENV=true

# Expose port for API
EXPOSE 8910

# The CMD will be overridden by docker-compose, but this is a good default.
CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8910"] 